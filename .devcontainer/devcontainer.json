{
  "name": "beam-blockchain-env",
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "elixir-lsp.elixir-ls",
        "rust-lang.rust-analyzer",
        "streetsidesoftware.code-spell-checker",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "onCreateCommand": "echo 'experimental-features = nix-command flakes' | sudo tee -a /etc/nix/nix.conf",
  "postCreateCommand": "nix --version && echo 'Nix flakes enabled.'"
}
