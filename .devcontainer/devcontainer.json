{
  "name": "beam-blockchain-env",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {
      "installFlakes": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "elixir-lsp.elixir-ls",
        "rust-lang.rust-analyzer"
      ]
    }
  },
  "postCreateCommand": "nix --version && echo 'Nix flakes enabled.'"
}
